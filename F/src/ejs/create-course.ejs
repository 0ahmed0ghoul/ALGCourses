<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create course</title>
    <!-- <link rel="stylesheet" href="../public/style.css"> -->
    <link rel="stylesheet" href="/styles/create-course.css">
</head>
<body>
    <%- include('navbar', { name: name, teacherInfoFilled: teacherInfoFilled }) %>

    <div class="big">
        <div class="course">
            <form action="/upload" method="POST" enctype="multipart/form-data">
                <h1>Create Course</h1>

                <div>
                <input type="text " placeholder="Enter Course Title" id="courseTitle">
                </div>
                <textarea name="content" id="courseContent" placeholder="Enter Description"></textarea>
                <br><br>
                <label for="price">Price ($):</label>
                <input type="number" id="price" name="price" min="0" step="0.01" placeholder="Enter price" required>
                <br><br>
                <label for="duration">Duration (minutes):</label>
                <input type="number" id="duration" name="duration" min="1" placeholder="Enter duration in Minutes" required>
                <br><br>
                <h1>Upload Video</h1>
                <br>
                <!-- Video Input -->
                <label for="video">Select Video:</label>
                <input type="file" id="video" name="video" accept="video/*" required>
                <br><br>
                <!-- Thumbnail Input -->
                <label for="thumbnail">Select Thumbnail:</label>
                <input type="file" id="thumbnail" name="thumbnail" accept="image/*" required>
                <br><br>
                <!-- Submit Button -->
                <button type="submit">Upload</button>
            </form>
        </div>
    </div>


</body>
</html>